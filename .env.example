# ===================================
# Server Configuration
# ===================================
NODE_ENV=development
PORT=5000

# ===================================
# Database
# ===================================
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/wa-artisan-marketplace

# MongoDB Atlas (Cloud) - Uncomment to use
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/wa-artisan-marketplace?retryWrites=true&w=majority

# ===================================
# Application URLs
# ===================================
FRONTEND_URL=http://localhost:5000
DOMAIN=waartisanmarket.com

# ===================================
# Authentication
# ===================================
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_change_this_in_production

# ===================================
# Payment Processing (Stripe)
# ===================================
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ===================================
# Email Service (SendGrid or SMTP)
# ===================================
# SendGrid (recommended for production)
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@waartisanmarket.com

# OR Gmail SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password

# ===================================
# File Storage (AWS S3 - Optional)
# ===================================
# Use for production to store images on S3
USE_S3=false
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_BUCKET_NAME=wa-artisan-marketplace-images
AWS_REGION=us-west-2

# ===================================
# Analytics & Tracking
# ===================================
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
FACEBOOK_PIXEL_ID=your_facebook_pixel_id

# ===================================
# Social Impact Tracking
# ===================================
HOMELESSNESS_CONTRIBUTION_PERCENTAGE=5
MARKETPLACE_FEE_PERCENTAGE=10

# ===================================
# Rate Limiting
# ===================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===================================
# File Upload Limits
# ===================================
MAX_FILE_SIZE=5242880
MAX_FILES_PER_PRODUCT=5

# ===================================
# Development/Testing
# ===================================
DEBUG=false
LOG_LEVEL=info
